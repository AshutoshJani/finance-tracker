<h1>My Portfolio</h1>

<div class="search-area">

    <h4>Search Stocks</h4>
    <%= form_tag search_stock_path, method: :get do %>

        <div class="form-group row">
            <div class="col-sm-9 no-padding-right">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker Symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-padding-left">
                <%= button_tag type: :submit, class: "btn btn-outline-success btn-lg" do %>
                    <%= fa_icon 'search', text: 'Search' %>
                <% end %>
            </div>
        </div>

    <% end %>

    <%= render 'users/result' %>

</div>
