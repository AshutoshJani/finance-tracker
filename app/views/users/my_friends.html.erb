<h1>My Friends</h1>

<div class="search-area">

    <h4>Search for your Friends</h4>
    <%= form_tag search_friend_path, remote: true, method: :get do %>

        <div class="form-group row">
            <div class="col-sm-9 no-padding-right">
                <%= text_field_tag :friend, params[:friend], placeholder: "Enter your friend's email id or name", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-padding-left">
                <%= button_tag type: :submit, class: "btn btn-outline-success btn-lg" do %>
                    <%= fa_icon 'search', text: 'Search' %>
                <% end %>
            </div>
        </div>

    <% end %>

    <div id="results">
    <%# id to handle the JS response %>
    </div>

    <% if !@friends.empty? %>
        <%= render 'friendships/list' %>
    <% end %>

</div>